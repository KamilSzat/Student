<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StudentGranding"
             x:Class="StudentGranding.MainPage"
             BackgroundColor="{Binding BackgroundColor} ">


        <VerticalStackLayout
            Padding="30">
            <Image
                Source="{Binding GradeIcon}"
                HeightRequest="100"
                WidthRequest="100"/>

            <Label
                Text="{Binding GradeText}"
                FontSize="18"
                HorizontalOptions="Center"/>

           <Entry Placeholder="Wpisz średnią ocen."
             Text="{Binding StudentGrade, Mode=TwoWay}" Keyboard="Numeric"/>
    </VerticalStackLayout>


</ContentPage>
